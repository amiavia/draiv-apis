# Skoda Connect API - Environment Configuration
# Copy this file to .env and configure with your actual values

# Application Configuration
ENV=development
LOG_LEVEL=INFO
PORT=8080

# Skoda Connect Credentials (for testing only - use proper auth in production)
SKODA_USERNAME=your_skoda_connect_email@example.com
SKODA_PASSWORD=your_skoda_connect_password

# Google Cloud Storage for OAuth token storage
GCS_BUCKET=your-skoda-oauth-bucket
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY=60

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Monitoring and Observability
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true
METRICS_PORT=9091

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/skoda_api

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Development/Testing
SKIP_AUTH=false
MOCK_VEHICLES=false
DEBUG_MODE=false

# Production Security Headers
CORS_ORIGINS=["https://yourdomain.com"]
ALLOWED_HOSTS=["yourdomain.com", "api.yourdomain.com"]

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3